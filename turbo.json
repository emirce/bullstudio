{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "prisma:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DIRECT_URL", "NEXT_PUBLIC_APP_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^prisma:generate"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:migrate-dev": {
      "cache": false,
      "persistent": true,
      "env": ["DIRECT_URL"]
    },
    "prisma:deploy": {
      "cache": false,
      "env": ["DIRECT_URL"]
    }
  }
}
